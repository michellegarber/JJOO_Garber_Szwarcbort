@{
    ViewData["Title"] = "Ver detalle Deportes";
}
<main class = "dep">

<h1>@ViewBag.DatosDeporte.Nombre</h1>
<img src = "/img/@ViewBag.DatosDeporte.Foto">

<h3 class = "back">Deportistas del deporte</h3>
@foreach(Deportista dep in ViewBag.Deportes){
<h1>@dep.Nombre</h1>
<h3>@dep.Apellido</h3>
<img src = "/img/@dep.Foto">
<button class="btn btn-primary"><a class="text-white" style="text-decoration: none;" href = '@Url.Action("VerDetalleDeportista", "Home", new {idDeportista = dep.IdDeportista})'> Ver Detalles </a></button>
}
</main>
